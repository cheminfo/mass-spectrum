{
  "name": "mass-spectrum",
  "version": "1.0.0",
  "description": "Pakcage dealing with single mass spectra",
  "main": "./lib/index.js",
  "module": "./lib-esm/index.js",
  "types": "./lib/index.d.ts",
  "keywords": [],
  "author": "Luc Patiny",
  "license": "MIT",
  "files": [
    "src",
    "lib",
    "lib-esm"
  ],
  "scripts": {
    "build": "npm run tsc && cheminfo-build -r MassSpectrum",
    "build-doc": "cheminfo doc",
    "clean": "rimraf lib lib-esm",
    "eslint": "eslint src --ext ts --cache",
    "eslint-fix": "npm run eslint -- --fix",
    "prepublishOnly": "npm run tsc",
    "test": "npm run test-coverage && npm run eslint",
    "test-coverage": "npm run test-only -- --coverage",
    "test-only": "jest",
    "tsc": "npm run clean && npm run tsc-cjs && npm run tsc-esm",
    "tsc-cjs": "tsc --project tsconfig.cjs.json",
    "tsc-esm": "tsc --project tsconfig.esm.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cheminfo/mass-spectrum.git"
  },
  "bugs": {
    "url": "https://github.com/cheminfo/mass-spectrum/issues"
  },
  "homepage": "https://github.com/cheminfo/mass-spectrum#readme",
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "prettier": {
    "arrowParens": "always",
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all"
  },
  "dependencies": {
    "common-spectrum": "^0.26.1",
    "mzdata": "^2.1.0",
    "ndim-parser": "^0.4.0",
    "xy-parser": "^3.1.1"
  },
  "devDependencies": {
    "@types/d3-scale": "^3.2.2",
    "@types/jest": "^26.0.20",
    "@types/react": "^17.0.2",
    "cheminfo-build": "^1.1.10",
    "eslint": "~7.22.0",
    "eslint-config-cheminfo-typescript": "~8.0.8",
    "jest": "~26.6.3",
    "prettier": "~2.2.1",
    "rimraf": "~3.0.2",
    "ts-jest": "~26.5.4",
    "typescript": "~4.2.3"
  }
}
